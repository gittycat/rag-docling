# Ollama Configuration
# Copy this to secrets/ollama_config.env
# Used as Docker secret in docker-compose.yml

# Ollama server URL (accessible from Docker containers)
OLLAMA_URL=http://host.docker.internal:11434

# Keep model loaded in memory
# Values: -1 (forever), 0 (unload immediately), 10m (10 minutes)
OLLAMA_KEEP_ALIVE=10m
